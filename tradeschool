    <!-- Chatbot Container -->
    <div class="chatbot-container">
        <div class="h-full flex flex-col">
            <div class="bg-blue-600 text-white p-4 flex justify-between items-center">
                <h3 class="font-bold">AKP AI Tutor</h3>
